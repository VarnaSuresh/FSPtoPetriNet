	<set object="skater.y" param="from" value="103"/>
	<reset behaviour = "skater.x"/>
	<reset behaviour = "skater.y"/>
	<announce event = "~north"/>
	<announce event = "~south"/>
    <announce event = "~east"/>
    <announce event = "~west"/>
</command>

